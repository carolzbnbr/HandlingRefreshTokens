<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="HandlingRefreshTokens.Views.AboutPage" xmlns:vm="clr-namespace:HandlingRefreshTokens.ViewModels" Title="{Binding Title}">
    <ContentPage.BindingContext>
        <vm:AboutViewModel />
    </ContentPage.BindingContext>
    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="Accent">#96d1ff</Color>
        </ResourceDictionary>
    </ContentPage.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <ScrollView Grid.Row="1">
            <StackLayout Orientation="Vertical" Padding="30,24,30,24" Spacing="10">
                <Label Text="Please touch 'Browse' button to load data." FontSize="16" Padding="0,0,0,0" />
                <Label Text="Inside 'browse' page, use pull-to-refresh gesture to refresh/reload the data." FontSize="16" Padding="0,0,0,0" />
                <Label Text="Even the Bearer-Token (JWT) expiring every 15 seconds, the data keeps flowing gracefully thanks to the Refresh-Token" FontSize="16" Padding="0,0,0,0" />
            </StackLayout>
        </ScrollView>
    </Grid>
</ContentPage>